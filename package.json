{
  "name": "fhevm-react-template",
  "version": "1.0.0",
  "private": true,
  "description": "Universal FHEVM SDK for building privacy-preserving dApps with React",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "install:all": "npm install",
    "dev": "npm run dev --workspace=example-procurement",
    "dev:sdk": "npm run dev --workspace=fhevm-sdk",
    "build": "npm run build --workspaces --if-present",
    "build:sdk": "npm run build --workspace=fhevm-sdk",
    "build:example": "npm run build --workspace=example-procurement",
    "compile": "npm run compile --workspace=example-procurement",
    "deploy": "npm run deploy --workspace=example-procurement",
    "test": "npm run test --workspaces --if-present",
    "lint": "npm run lint --workspaces --if-present",
    "format": "prettier --write 'packages/**/*.{ts,tsx,js,jsx,json,md,sol}'",
    "clean": "npm run clean --workspaces --if-present && rm -rf node_modules"
  },
  "keywords": [
    "fhevm",
    "fhe",
    "fully-homomorphic-encryption",
    "zama",
    "ethereum",
    "sdk",
    "react",
    "web3",
    "privacy",
    "confidential-computing"
  ],
  "author": "Your Name",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/fhevm-react-template.git"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "devDependencies": {
    "prettier": "^3.2.5",
    "prettier-plugin-solidity": "^1.3.1"
  }
}
